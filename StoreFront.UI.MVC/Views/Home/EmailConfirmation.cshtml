@{
    ViewData["Title"] = "Email Confirmation";
}

@*
    Model declaration - This View expects information that fits the ContactViewModel.
    When referring to the model/class ITSELF, we use a lowercase m in the word "model".
*@
@model StoreFront.UI.MVC.Models.ContactViewModel

<!-- ======= Main ======= -->
<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section class="breadcrumbs">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Email Confirmation</h2>
                <ol>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li><a href="@Url.Action("Contact", "Home")">Contact</a></li>
                    <li>Email Confirmation</li>
                </ol>
            </div>
        </div>
    </section><!-- End Breadcrumbs -->
    <!-- ======= Confirmation Section ======= -->
    <section class="contact" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-duration="500">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    @*
                    When referring to a SPECIFIC OBJECT passed to this View (like
                    the cvm object we passed), we use a capital M -- "Model".
                    *@
                    <div class="row justify-content-center">
                        <div class="info-box col-lg-6 text-center">
                            <i class="bx bx-check-circle"></i>
                            <h3>
                                <span>Message Sent!</span>
                            </h3>
                            <p>
                                Thank you for contacting me! I'll try to write you back at @Model.Email in the
                                next 1-3 business days.
                            </p>
                            <br />
                            <div class="offset-3 col-md-6 text-center">
                                <p>
                                    You sent the following message on
                                    @DateTime.Now.Date.ToShortDateString() at
                                    @DateTime.Now.ToShortTimeString() :
                                </p>
                            </div>
                            <br />
                            <div class="offset-3 col-md-6">
                                <p>
                                    <em>@Model.Message</em>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section><!-- End Confirmation Section -->

</main><!-- End #main -->